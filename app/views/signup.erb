<header>
    <h1>Signup</h1>
</header>

<ul class="errors">
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>


<main>
    <form method = "POST" action="/signup">
        <div class="form-group">
            <label for ="email">E-Mail</label>
            <input placeholder="Enter your Email" type = "email" name ="email" id="email" value="<%= @user.email %>"> 

        </div>

        <div class="form-group">
            <label for ="avatar_url">Avatar URL</label>
            <input placeholder="Enter your avatar URL" type = "text" name ="avatar_url" id="avatar_url" value="<%= @user.avatar_url %>"> 
        </div>
    
        <div class="form-group">
            <label for ="username">Username</label>
            <input placeholder="Enter your username" type = "text" name ="username" id="username" value="<%= @user.username %>">
        </div> 

        <div class="form-group">
            <label for ="password">Password</label>
            <input placeholder="Enter your password" type = "password" name ="password" id="password">
        </div>
        
        <div class="form-group">
            <button type = "submit">
                Create new user
            </button>
        </div>
    </form>
</main>